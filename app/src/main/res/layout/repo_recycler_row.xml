<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <TextView
        android:id="@+id/repo_row_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="name of repo"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/image_card_padding"/>

    <TextView
        android:id="@+id/repo_row_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="this is a fake description"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/image_card_padding"/>

    <TextView
        android:id="@+id/repo_row_login_owner"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="login owner"
        android:textColor="@color/colorPrimary"
        android:padding="@dimen/image_card_padding"/>

</LinearLayout>